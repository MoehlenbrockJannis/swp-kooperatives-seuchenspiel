<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/20.0.1"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uol.swp.client.main.MainMenuPresenter">
    <BorderPane>
        <left>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="20.0" left="20.0" top="20.0"/>
                </BorderPane.margin>
                <Label text="Eingeloggte Benutzer">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <ListView fx:id="usersView" focusTraversable="false" prefHeight="200.0" prefWidth="200.0"
                          VBox.vgrow="ALWAYS"/>
                <VBox spacing="5.0">
                    <Label text="Statistiken">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <ListView focusTraversable="false" maxHeight="1.7976931348623157E308" prefHeight="200.0"
                              prefWidth="200.0"/>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </VBox>
            </VBox>
        </left>
        <right>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="20.0" right="20.0" top="20.0"/>
                </BorderPane.margin>
                <Label text="Globaler Chat">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <ListView focusTraversable="false" maxHeight="1.7976931348623157E308" prefWidth="116.0"
                          VBox.vgrow="ALWAYS"/>
                <HBox maxHeight="-Infinity" prefHeight="30.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
                    <TextField focusTraversable="false">
                        <cursor>
                            <Cursor fx:constant="TEXT"/>
                        </cursor>
                    </TextField>
                    <Button focusTraversable="false" mnemonicParsing="false" prefWidth="80.0" text="Senden">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </HBox>
            </VBox>
        </right>
        <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="20.0" left="50.0" right="50.0"/>
                </BorderPane.margin>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="P A N D E M I E" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="50.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="50.0" top="50.0"/>
                    </VBox.margin>
                </Text>
                <Button alignment="CENTER" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity"
                        mnemonicParsing="false" onAction="#onCreateLobby" prefHeight="50.0" prefWidth="250.0"
                        text="Lobby erstellen">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button alignment="CENTER" defaultButton="true" focusTraversable="false" maxWidth="-Infinity"
                        mnemonicParsing="false" onAction="#onJoinLobby" prefHeight="50.0" prefWidth="250.0"
                        text="Lobby beitreten">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <HBox alignment="TOP_CENTER" maxWidth="-Infinity" prefHeight="100.0" prefWidth="250.0" spacing="10.0">
                    <Button alignment="CENTER" focusTraversable="false" maxWidth="-Infinity" mnemonicParsing="false"
                            prefHeight="36.0" prefWidth="36.0">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../images/setting-line-icon.png"/>
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button alignment="CENTER" focusTraversable="false" maxWidth="-Infinity" mnemonicParsing="false"
                            prefHeight="36.0" prefWidth="36.0" onAction="#onGameInstructionsButtonPressed">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../images/question-mark-line-icon.png"/>
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button alignment="CENTER" focusTraversable="false" maxWidth="-Infinity" mnemonicParsing="false"
                            prefHeight="36.0" prefWidth="36.0">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../images/logout-line-icon.png"/>
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button alignment="CENTER" focusTraversable="false" maxWidth="-Infinity" mnemonicParsing="false"
                            prefHeight="36.0" prefWidth="36.0">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../images/close-line-icon.png"/>
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </HBox>
            </VBox>
        </center>
    </BorderPane>

    <fx:include source="GameInstructionsView.fxml" fx:id="gameInstructionsAnchorPane"/>
</StackPane>
