<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="de.uol.swp.client.action.ShareKnowledgeActionPresenter"
         fx:id="tabPane"
         prefHeight="400.0" prefWidth="600.0">
    <Tab fx:id="sendCardActionTab">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="100" />
                <ColumnConstraints percentWidth="100" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100" />
            </rowConstraints>
            <ListView fx:id="sendablePlayerCardsListView"
                      GridPane.columnIndex="0"
                      focusTraversable="false"
                      prefHeight="400.0"
                      prefWidth="200.0"/>
            <ListView fx:id="sendingTargetPlayersListView"
                      GridPane.columnIndex="1"
                      focusTraversable="false"
                      prefHeight="400.0"
                      prefWidth="200.0"/>
        </GridPane>
    </Tab>
    <Tab fx:id="receiveCardActionTab">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="100" />
                <ColumnConstraints percentWidth="100" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100" />
            </rowConstraints>
            <ListView fx:id="receivablePlayerCardsListView"
                      GridPane.columnIndex="0"
                      focusTraversable="false"
                      prefHeight="400.0"
                      prefWidth="200.0"/>
            <ListView fx:id="receivingTargetPlayersListView"
                      GridPane.columnIndex="1"
                      focusTraversable="false"
                      prefHeight="400.0"
                      prefWidth="200.0"/>
        </GridPane>
    </Tab>
</TabPane>
