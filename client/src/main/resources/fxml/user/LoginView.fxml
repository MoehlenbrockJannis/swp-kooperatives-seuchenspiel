<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane prefHeight="450.0" prefWidth="850.0" styleClass="dialog-pane" stylesheets="@../../css/myDialog.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uol.swp.client.user.LoginPresenter">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <GridPane GridPane.rowIndex="1">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField fx:id="loginField" prefHeight="60.0" prefWidth="425.0" promptText="Benutzername">
               <font>
                  <Font size="20.0" />
               </font>
               <GridPane.margin>
                  <Insets left="30.0" right="10.0" />
               </GridPane.margin>
            </TextField>
            <PasswordField fx:id="passwordField" prefHeight="60.0" promptText="Passwort" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets left="10.0" right="30.0" />
               </GridPane.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </PasswordField>
         </children>
      </GridPane>
      <GridPane GridPane.rowIndex="2">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onExitButtonPressed" prefHeight="50.0" prefWidth="135.0" text="Beenden" GridPane.halignment="RIGHT">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#onLoginButtonPressed" pickOnBounds="false" prefHeight="50.0" prefWidth="280.0" scaleShape="false" text="Login" GridPane.columnIndex="1" GridPane.halignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button blendMode="SRC_ATOP" mnemonicParsing="false" onAction="#onRegisterButtonPressed" prefHeight="50.0" prefWidth="135.0" text="Registrieren" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </GridPane>
      <Label alignment="CENTER" text="PANDEMIE" GridPane.halignment="CENTER">
         <font>
            <Font size="51.0" />
         </font>
      </Label>
   </children>
</GridPane>
