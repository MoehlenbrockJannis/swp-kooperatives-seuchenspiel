<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<HBox fx:id="stackHBox" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <StackPane fx:id="cardIcon" style="-fx-border-color: whitesmoke; -fx-border-width: 0 10 0 5;"/>
    <VBox fx:id="labelVBox" alignment="CENTER">
        <Button fx:id="drawCardButton">
            <graphic>
                <Label fx:id="drawStackNumberOfCardsLabel" text="00" alignment="CENTER" />
            </graphic>
        </Button>
        <Label fx:id="discardStackNumberOfCardsLabel" text="00" alignment="CENTER" />
    </VBox>
</HBox>
